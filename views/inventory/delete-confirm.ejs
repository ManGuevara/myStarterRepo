<%- include('../partials/flash-messages') %>

<div class="container mt-5">
    <h1>Confirm Deletion</h1>
    <p class="text-danger"><strong>Warning: This action cannot be undone!</strong></p>

    <form action="/inv/delete" method="POST">
        <!-- Hidden Inventory ID (Critical for deletion) -->
        <input type="hidden" name="inv_id" <% if (locals.inv_id) { %> value="<%= inv_id %>" <% } %>>

        <!-- Display Only: Make, Model, Year, Price -->
        <div class="mb-3">
            <label class="form-label">Make</label>
            <input type="text" class="form-control" value="<%= inv_make %>" readonly>
        </div>

        <div class="mb-3">
            <label class="form-label">Model</label>
            <input type="text" class="form-control" value="<%= inv_model %>" readonly>
        </div>

        <div class="mb-3">
            <label class="form-label">Year</label>
            <input type="text" class="form-control" value="<%= inv_year %>" readonly>
        </div>

        <div class="mb-3">
            <label class="form-label">Price</label>
            <input type="text" class="form-control" value="<%= new Intl.NumberFormat('en-US', { style: 'currency', currency: 'USD' }).format(inv_price) %>" readonly>
        </div>

        <!-- Confirmation Buttons -->
        <div class="d-grid gap-2">
            <button type="submit" class="btn btn-danger">Delete Permanently</button>
            <a href="/inv/" class="btn btn-secondary">Cancel</a>
        </div>
    </form>
</div>