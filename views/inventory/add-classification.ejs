<%- include('../partials/flash-messages') %>

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h2 class="h4 mb-0">Add New Classification</h2>
                </div>
                <div class="card-body">
                    <form id="classificationForm" action="/inv/add-classification" method="POST">
                        <div class="mb-3">
                            <label for="classification_name" class="form-label">Classification Name</label>
                            <input type="text" class="form-control" id="classification_name" 
                                   name="classification_name" required
                                   pattern="[a-zA-Z0-9]+"
                                   title="No spaces or special characters allowed">
                            <div class="form-text">Only letters and numbers allowed (no spaces or special characters)</div>
                            <% if (errors && errors.classification_name) { %>
                                <div class="invalid-feedback d-block">
                                    <%= errors.classification_name %>
                                </div>
                            <% } %>
                        </div>
                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-primary">Add Classification</button>
                            <a href="/inv/" class="btn btn-secondary">Cancel</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>